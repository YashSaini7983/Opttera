<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav"
    app:startDestination="@id/searchFragment">
    <fragment
        android:id="@+id/rangeFragment"
        android:name="com.yash.opttera2.range.ui.RangeFragment"
        android:label="fragment_range"
        tools:layout="@layout/fragment_range" />
    <fragment
        android:id="@+id/planTripFragment"
        android:name="com.yash.opttera2.plantrip.ui.PlanTripFragment"
        android:label="fragment_plan_trip"
        tools:layout="@layout/fragment_plan_trip" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.yash.opttera2.search.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.yash.opttera2.History.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" >
        <action
            android:id="@+id/action_historyFragment_to_historyTripDetails"
            app:destination="@id/historyTripDetails" />
    </fragment>
    <fragment
        android:id="@+id/historyTripDetails"
        android:name="com.yash.opttera2.History.HistoryTripDetails"
        android:label="fragment_history_trip_details"
        tools:layout="@layout/fragment_history_trip_details" />
</navigation>